
mod example

ext fun puts s &u8 -> s32 = puts

record Cat
    name &u8
    age u8
    hunger f32

fun Cat::is_hungry self &example::Cat -> bool {
    // auto deref shall be added for the actual compiler...
    // return self.hunger > 0.5;
    return (@self).hunger > 0.5;
}

fun greet {
    puts "Hello, world!";
}

fun main {
    var mine example::Cat = example::Cat "Cookie" 5 0.0;
    // the actual compiler will have method calls, meaning the following is just
    // if mine /> is_hungry {
    if example::Cat::is_hungry (&mine) {
        puts "Hungry boi";
    } else {
        puts "Not hungry";
    }
    example::greet;
}

